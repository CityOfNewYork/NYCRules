/**
 * Implements hook_entity_info_alter().
 *
 * Use this hook to specify bundles to avoid a recursion, as loading the entity
 * group membership types needs the entity info too.
 */
function og_entity_info_alter(&$entity_info) {
  // If we're updating, the schema may not be ready yet.
  if (!class_exists('EntityAPIController') || !class_exists('OgMembershipTypeUIController')) {
    return;
  }
  $og_membership_types = entity_load('og_membership_type');
  foreach ($og_membership_types as $type_name => $type) {
    $entity_info['og_membership']['bundles'][$type_name] = array(
      //@todo do we need a short label too?
      'label' => $type->name,
      'admin' => array(
        'path' => 'admin/config/group/group-membership/manage/%og_membership_type',
        'real path' => 'admin/config/group/group-membership/manage/' . $type->name,
        'bundle argument' => 5,
        'access arguments' => array('administer group'),
      ),
    );
  }
}

